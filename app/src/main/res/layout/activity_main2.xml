<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#11161D">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#11161d" >

        <ImageView
            android:id="@+id/imageminha1"
            android:layout_width="137dp"
            android:layout_height="105dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/shortlogobranca"
            android:textAlignment="center" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/lexend_semibold"
            android:paddingBottom="10px"
            android:text="Charity Connect"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_marginTop="-20dp"
            android:textSize="65px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend_semibold"
            android:paddingBottom="24dp"
            android:layout_marginTop="15dp"
            android:text="FormulÃ¡rio para Contato"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="#FFFFFF"
            android:textSize="55px" />





        <EditText
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu nome"
            android:textColorHint="#BFFFFFFF"
            android:textColor="#707bff"
            android:backgroundTint="#707bff"
            android:textSize="55px"
            android:paddingBottom="16dp"/>



        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu email"
            android:textColorHint="#BFFFFFFF"
            android:textColor="#707bff"
            android:backgroundTint="#707bff"
            android:textSize="55px"
            android:paddingBottom="16dp"/>



        <Button
            android:id="@+id/enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:textColor="#FFFFFF"
            android:background="#707bff"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
    </LinearLayout>
</ScrollView>
